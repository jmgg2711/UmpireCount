<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UMPIRE COUNTER"
        android:textSize="28sp"
        android:textAlignment="center"
        android:textColor="#000000"
        android:layout_marginVertical="16sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BALL"
        android:textSize="24sp"
        android:textAlignment="center"
        android:textColor="#000000"/>

    <Button
        android:id="@+id/btn_Balls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="click_balls"
        android:text="0"
        android:textSize="24sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="STRIKE"
        android:textSize="24sp"
        android:textAlignment="center"
        android:textColor="#000000"/>

    <Button
        android:id="@+id/btn_strikes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="click_strikes"
        android:text="0"
        android:textSize="24sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#000000"
        android:layout_marginVertical="8dp"/>
6

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OUTS"
        android:textSize="24sp"
        android:textAlignment="center"
        android:textColor="#000000"/>

    <Button
        android:id="@+id/btn_outs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="click_outs"
        android:text="0"
        android:textSize="24sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="INNINGS"
        android:textSize="24sp"
        android:textAlignment="center"
        android:textColor="#000000"/>

    <Button
        android:id="@+id/btn_innings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="click_innings"
        android:text="0"
        android:textSize="24sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#000000"
        android:layout_weight="1"
        android:layout_marginVertical="16dp"/>

    <Button
        android:id="@+id/btn_reset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="click_reset"
        android:text="RESET"
        android:textSize="24sp"
        android:layout_marginHorizontal="8dp"/>

</LinearLayout>

